                SizeFlagsStretchRatio="1"
                HorizontalExpand="True"
                Align="Right"
                StyleClasses="monospace"
                ClipText="True" />
        </BoxCotainer>
        <BoxContainer Orientation="Horizontal"
            HorizontalExpand="True"
            SeparationOverride="2">
            <Label Name="SuppliesExpenseLabel"
                SizeFlagsStretchRatio="2"
                HorizontalExpand="True"
                ClipText="True"
                Text="{Loc 'ledger-stats-supplies-expense-label'}" />
            <Label Name="SuppliesExpenseValue"
                SizeFlagsStretchRatio="1"
                HorizontalExpand="True"
                Align="Right"
                StyleClasses="monospace"
                ClipText="True" />
        </BoxCotainer>
        <BoxContainer Orientation="Horizontal"
            HorizontalExpand="True"
            SeparationOverride="2">
            <Label Name="BountyExpenseLabel"
                SizeFlagsStretchRatio="2"
                HorizontalExpand="True"
                ClipText="True"
                Text="{Loc 'ledger-stats-bounty-expense-label'}" />
            <Label Name="BountyExpenseValue"
                SizeFlagsStretchRatio="1"
                HorizontalExpand="True"
                Align="Right"
                StyleClasses="monospace"
                ClipText="True" />
        </BoxCotainer>
        <BoxContainer Orientation="Horizontal"
            HorizontalExpand="True"
            SeparationOverride="2">
            <Label Name="OtherExpenseLabel"
                SizeFlagsStretchRatio="2"
                HorizontalExpand="True"
                ClipText="True"
                Text="{Loc 'ledger-stats-other-expense-label'}" />
            <Label Name="OtherExpenseValue"
                SizeFlagsStretchRatio="1"
                HorizontalExpand="True"
                Align="Right"
                StyleClasses="monospace"
                ClipText="True" />
        </BoxCotainer>
    </BoxContainer>
    <BoxContainer
        Orientation="Vertical"
        HorizontalExpand="True"
        Margin="10">
        <Label
            Name="TotalBalanceLabel"
            Align="Center"
            StyleClasses="LabelBig"
            ClipText="True"
            Text="{Loc 'ledger-stats-total-balance-label'}" />
        <Label
            Name="TotalBalanceValue"
            Align="Center"
            StyleClasses="LabelBig" />
    </BoxContainer>
</cartridges:LedgerStatsUiFragment>
